@page "/"

@inject IStringLocalizer<UserInfos> Localizer


<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorizing>
        <div>@Localizer["Authorizing"] ...</div>
    </Authorizing>
    <Authorized>
        <MudText Typo="Typo.h6" GutterBottom="true">@Localizer["Hello"], @context.User.Identity.Name</MudText>

        <UserInfos />
    </Authorized>
    <NotAuthorized>
        <div>@Localizer["NotAuthorized"]!</div>
    </NotAuthorized>
</AuthorizeView>
